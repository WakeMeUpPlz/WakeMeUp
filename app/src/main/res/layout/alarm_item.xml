<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="20dp"
        android:id="@+id/linearLayout"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:background="@drawable/alarm_item_top_layout">


        <TextView
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nanum_gothic_extra_bold"
            android:textSize="60dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:id="@+id/timeArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00" />

        <TextView
            android:id="@+id/dOrN"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AM" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ToggleButton
            android:gravity="right"
            android:id="@+id/activateBtn"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/toggle_selector_layout"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

        <GridLayout
            android:background="@drawable/alarm_item_bottom_layout"
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="7">

            <TextView
                android:id="@+id/monday"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="월"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="화"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="수"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="목"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="금"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="토"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="25dp"
                android:text="일"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </GridLayout>

</LinearLayout>
</layout>